<% if notice.present? %>
  <div id="notice" class="alert alert-info"><%= notice %></div>
<% end %>
<% if warning.present? %>
  <div id="warning" class="alert alert-warning"><%= warning %></div>
<% end %>
<% if error.present? %>
  <div id="error" class="alert alert-danger"><%= error %></div>
<% end %>

<h1>Cats</h1>

<div class="table-responsive">
  <table class="table">
    <thead>
      <tr>
        <th>Name</th>
        <th>State</th>
        <th>Stamina</th>
        <th colspan="3"></th>
      </tr>
    </thead>
  
    <tbody>
      <% @cats.each do |cat| %>
        <tr>
          <td><%= cat.name %></td>
          <td><span class="badge badge-<%= status_class cat.aasm_state %>"><%= cat.aasm_state.humanize %></span></td>
          <td><span class="badge badge-pill badge-<%= stamina_class cat.stamina %>"><%= cat.stamina %></span></td>
          <td>
            <div class="btn-group" role="group" aria-label="Basic example">
              <%= link_to 'Show', cat, class: 'btn btn-sm btn-light' %>
              <%= link_to 'Edit', edit_cat_path(cat), class: 'btn btn-sm btn-light' %>
              <%= link_to 'Kill', cat, method: :delete, data: { confirm: 'Are you sure?' }, class: 'btn btn-sm btn-danger' %>
            </div>
          </td>
        </tr>
      <% end %>
    </tbody>
  </table>
</div>
<br>

<%= link_to 'New Cat', new_cat_path, class: 'btn btn-primary' %>
